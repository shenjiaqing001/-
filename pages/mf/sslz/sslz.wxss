.viewShadow{
  width: 95%;
  margin: 0 auto;
  margin-top:10rpx;
  margin-bottom:40rpx;
  border-radius: 14rpx;
  box-shadow: 3rpx 6rpx 10rpx 2rpx rgb(228,194,131);
}

.viewTitle{
  font-size: 18pt;
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0;
  padding: 0 3%;
  border-bottom: 2rpx solid rgb(228,194,131);
}

