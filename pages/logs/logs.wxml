<view class="navbar" style=" z-index:50">
  <!--循环-->
  <view wx:for="{{navbar}}" data-idx="{{index}}" wx:key="unique" class="item {{currentTab==index ? 'active' : ''}}" bindtap="navbarTap">
    <view class="notice" wx:if="{{count[index]>0}}">{{count[index]}}</view>
    {{item}}
    <!--<text  bindtap="navbarTap">{{item}}</text>-->
  </view>
</view>

<view hidden="{{currentTab !== 0}}" id="one">
  <view class="li"  wx:for="{{equipPlace}}" wx:for-index="equipForIndex">
      <picker class= "picker" mode="selector" bindchange = "equipPickerChange" id="abc{{equipForIndex+1}}" value="{{equipIndexArray[equipForIndex]}}" range="{{equipArray[equipForIndex]}}" range-key="name"  data-idx = "{{equipForIndex}}">
        <text >{{equipPlace[equipForIndex].value}}  </text>
       <text  class='setcontext' > {{equipArray[equipForIndex][equipIndexArray[equipForIndex]].name}}</text>

      </picker>
  </view>  
  
</view>


<view hidden="{{currentTab !== 1}}" id="one">
  <view class='picker'>
    <text  class='li' >附魔</text>
  </view>
  <view class="li"  wx:for="{{enchantPlace}}" wx:for-index="enchantForIndex" > 
    <view hidden= "{{enchantPlace[enchantForIndex].show}}" class="picker"> 
      <picker class= "picker" mode="selector" bindchange = "enchantPickerChange" id="abc{{enchantForIndex+1}}" value="{{enchantIndexArray[enchantForIndex]}}" range="{{enchantArray[enchantForIndex]}}" range-key="name"  data-idx = "{{enchantForIndex}}"> 
      <text >{{enchantPlace[enchantForIndex].value}}  </text> 
        <text  class='setcontext' > {{enchantArray[enchantForIndex][enchantIndexArray[enchantForIndex]].name}}</text>
      </picker>
    </view>      
  </view>  

  <view class='picker'>
    <text  class='li' >宝石</text>
  </view>
  <view class="li"  wx:for="{{stonePlace}}" wx:for-index="stoneForIndex" > 
    <view hidden= "{{stonePlace[stoneForIndex].show}}" class="picker"> 
      <picker class= "picker" mode="selector" bindchange = "stonePickerChange" id="abc{{stoneForIndex+1}}" value="{{stoneIndexArray[stoneForIndex]}}" range="{{stoneArray[stoneForIndex]}}" range-key="name"  data-idx = "{{stoneForIndex}}"> 
      <text >{{stonePlace[stoneForIndex].value}}  </text> 
        <text  class='setcontext' > {{stoneArray[stoneForIndex][stoneIndexArray[stoneForIndex]].name}}</text>
      </picker>
    </view>      
  </view>  
</view>

<view hidden="{{currentTab !== 2}}" id="one">

</view>

