<view class="navbar" style=" z-index:50">
  <!--循环-->
  <view wx:for="{{navbar}}" data-idx="{{index}}" wx:key="unique" class="item {{currentTab==index ? 'active' : ''}}" bindtap="navbarTap">
    <view class="notice" wx:if="{{count[index]>0}}">{{count[index]}}</view>
    {{item}}
    <!--<text  bindtap="navbarTap">{{item}}</text>-->
  </view>
</view>

<view hidden="{{currentTab !== 0}}" id="one">
  <view class="li"  wx:for="{{equipPlace}}" wx:for-index="equipForIndex">
      <picker class= "picker" mode="selector" bindchange = "bindPickerChange" id="abc{{equipForIndex+1}}" value="{{equipIndexArray[equipForIndex]}}" range="{{equipArray[equipForIndex]}}" range-key="name"  data-idx = "{{equipForIndex}}">
        <text >{{equipPlace[equipForIndex].value}}  </text>
       <text  class='setcontext' > {{equipArray[equipForIndex][equipIndexArray[equipForIndex]].name}}</text>

      </picker>
  </view>  
  
</view>


<view hidden="{{currentTab !== 1}}" id="one">
  <view class="li"  wx:for="{{enchantPlace}}" wx:for-index="enchantForIndex">
      <text >{{enchanPlace[enchanForIndex].value}}  </text>
      <picker hidden='{{enchantPlace[enchantForIndex].show}} '  class= "picker" mode="selector" bindchange = "bindPickerChange" id="abc{{enchantForIndex+1}}" value="{{enchanIndexArray[enchantForIndex]}}" range="{{enchanArray[enchantForIndex]}}" range-key="name"  data-idx = "{{enchantForIndex}}">        
        <text  class='setcontext' > 123</text>
      </picker>
  </view>  
</view>

